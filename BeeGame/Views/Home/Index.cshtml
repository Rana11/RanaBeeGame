@model BeeGame.ServiceLayer.Models.IndexViewModel

<div class="container well">
    <h2>
        Press the button to hit a random bee
        <button id="hitBtn" class="btn btn-primary btn-lg">Hit</button>
    </h2>
</div>

<div class="row">
    <div class="col-md-4">
        
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Queen Bees</h3>
            </div>
            <div class="panel-body">
                @Html.EditorFor(x => x.QueenBees)
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Worker Bees</h3>
            </div>
            <div class="panel-body">
               @Html.EditorFor(x=>x.WorkerBees)
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Drone Bees</h3>
            </div>
            <div class="panel-body">
               @Html.EditorFor(x => x.DroneBees)
            </div>
        </div>
    </div>
</div>

